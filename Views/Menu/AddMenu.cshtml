@{
    ViewData["Title"] = "Create";
}
<div>
    <h1>Create</h1>

    <div class="d-flex justify-content-center h4">Rolemenu</div>
    <hr />
    <div>
        <form action="/Menu/AddMenu" method="post">
            <div class="row">
                <div class="col-md-6">
                    <input class="form-control" id='name' name="name" placeholder="Name" />
